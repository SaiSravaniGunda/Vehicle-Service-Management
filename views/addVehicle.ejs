<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')%>
    <title>ServiTrack</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LAav8qGOHp/lWYWq5jpn5qIAWP/p5rj8tAHy4tNqpyIWjpAmM4vjWpL2iZ8QLKgA" crossorigin="anonymous">

    <style>
        /* Sidebar style */
        .sidebar {
            height: 100vh; /* Full height */
            width: 250px; /* Fixed width */
            position: fixed; /* Make sidebar fixed on the left */
            top: 0;
            left: 0;
            background-color: #45494e; /* Dark background */
            padding-top: 20px; /* Space at the top */
        }

        .sidebar a {
            padding: 15px 20px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
        }

        .sidebar a:hover {
            background-color: #7d7f81;
        }

        /* Main content */
        .main-content {
            margin-left: 250px; /* Same as the width of the sidebar */
            padding: 20px;
        }

        /* Fixed navbar */
        .navbar {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        /* Adjust the main content padding due to fixed navbar */
        .main-content {
            padding-top: 60px;
        }
        @media (max-width: 768px) {
            .sidebar {
                position: relative; /* Change to relative on small screens */
                height: auto; /* Allow sidebar to collapse */
                width: 100%; /* Full width */
                display: block; /* Ensure it displays */
            }

            .main-content {
                margin-left: 0; /* Remove left margin on small screens */
                padding: 20px; /* Keep padding */
            }

            .navbar {
                position: relative; /* Change navbar to relative on small screens */
            }
            #emptyLink {
                display: none;
            }
        }
    </style>
</head>
<body>

    <%- include('./partials/nav')%>

    <div class="sidebar">
        <a id="emptyLink"></a>
        <a href="/vehicle/vehicles">Vehicles</a>
        <a href="/vehicle/addVehicle">Add Vehicle</a>
        
    </div>

    <!-- Main content -->
    <div class="main-content">
        <h2>Add your vehicle</h2>
        <!-- <p>This is your main content area. The sidebar is always visible on the left.</p> -->

        <!-- Content that will change when navigating between pages -->
        <div id="pageContent mt-6" >
            <form action="/vehicle/addVehicle"  method="post">
            
                <div class="mb-3">
                  <label  class="form-label">License Plate number</label>
                  <input type="text" class="form-control" required name="licensePlate">
                </div>
                <div class="mb-3">
                    <label  class="form-label">Vehicle Identification Number</label>
                    <input type="text" class="form-control" required name="vin">
                  </div>
                <div class="mb-3">
                    <label  class="form-label">Manufacturer</label>
                    <input type="text" class="form-control" required name="manufacturer">
                </div>
                
                <div class="mb-3">
                  <label  class="form-label">Model</label>
                  <input type="text" name="model" required class="form-control" >
                </div>

                <div class="mb-3">
                    <label  class="form-label">PurchaseYear</label>
                    <input type="number" name="purchaseYear" min="1900" required placeholder="Enter year of purchase" class="form-control" >
                  </div>
                  <div class="mb-3">
                    <label  class="form-label">Color</label>
                    <input type="text" name="color" required class="form-control" >
                  </div>
                  <div class="mb-3">
                    <label  class="form-label">Current Mileage</label>
                    <input type="number" name="mileage" required class="form-control" >
                  </div>
                  <div class="mb-3">
                    <label  class="form-label">Registration Date</label>
                    <input type="date" name="registrationDate" required class="form-control" >
                  </div>
                  <div class="mb-3">
                    <label  class="form-label">last Serviced</label>
                    <input type="date" name="lastServiced"  class="form-control" >
                  </div>
                
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>